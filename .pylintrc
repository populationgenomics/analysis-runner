[MESSAGES CONTROL]
# E0401 Unable to import (for some reason pylint doesn't recognize pysam import)
# E1101 no-member (same: pylint doesn't recognize pysam members)
# I1101 c-extension-no-member (same as above)
# R0801 Similar lines in 2 files (we have code duplicated and exercises and solutions intentionally)
# f-string-without-interpolation (we allow f-strings that don't do any formatting for consistent looks and for future safety)
# fixme (left 'TODO' lines)
# inherit-non-class ("Inheriting 'NamedTuple', which is not a class" false positive, see: https://github.com/PyCQA/pylint/issues/3876)
# too-few-public-methods

disable=E0401,E1101,I1101,R0801,f-string-without-interpolation,fixme,inherit-non-class,too-few-public-methods

# Overriding these to allow short 1- or 2-letter variable names
attr-rgx=[a-z_][a-z0-9_]{0,30}$
argument-rgx=[a-z_][a-z0-9_]{0,30}$
variable-rgx=[a-z_][a-z0-9_]{0,30}$

# Maximum number of characters on a single line
max-line-length=88

# Set the linting for string quotes (for the plugin https://pypi.org/project/pylint-quotes/)
string-quote=single
triple-quote=double
docstring-quote=double

[MASTER]
load-plugins=pylint_quotes
